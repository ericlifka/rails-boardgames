<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @game.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <%= link_to 'Edit', edit_game_path(@game) %>
  <%= link_to 'Delete', game_path(@game),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Back', games_path %>
</p>
