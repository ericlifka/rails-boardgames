<h1><%= @user %>'s games</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>

  <% @games.each do |game| %>
   <tr>
      <td>
          <% if game.image %>
              <%= link_to game_path(game) do %>
                  <%= image_tag game.image %>
              <% end %>
          <% end %>
      </td>
      <td><%= game.name %></td>
      <td><%= game.description %></td>
      <td><%= link_to 'Show', game_path(game) %></td>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Delete', game_path(game),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

  <tr>
    <td><%= link_to 'New', new_game_path %></td>
  </tr>
</table>
